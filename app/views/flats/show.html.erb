<%= render "navbar" %>

<div class="map" style="background-image: url('<%= @flat.picture_url %>')"></div>
<div class="container margin-top-negative">

  <div class="row">

    <div class="col-8">
      <div class="flat-show-card">
        <h1><%= @flat.name %></h1>
        <p class="flat-show-adress"><%= @flat.address %></p>
      </div>
      <div class="flat-show-card">
        <h3>A bit more about this flat...</h3>
        <p><%= @flat.description %></p>
        <div class="map" style="background-image: url('https://api.mapbox.com/styles/v1/mapbox/streets-v12/static/auto/300x200?access_token=pk.eyJ1IjoiYmVuYWx0YTc4OTIiLCJhIjoiY2xzN2dlazRqMTRtdDJxbjMxeTZkdjhjZiJ9.j1q9REVcEHogfNbM9qupGA')"></div>
      </div>
    </div>


    <div class="col-4">
      <div class="flat-show-card">
        <h5>Book this place!</h5>

        <form action="">
          <div class="input-group">
            <span class="input-group-text" id="start-date-label">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2017" aria-label="start-date" aria-describedby="start-date-label">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-text" id="end-date-label">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2017" aria-label="end-date" aria-describedby="start-date-label">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
        </form>

      </div>
      <div class="flat-show-card">
        <h3>Details</h3>
        <div class="flex">
          <div class="flex">
            <%= @flat.number_of_guests %> people
          </div>
          <div class="flex ms-3">
            <%= @flat.price_per_night %> â‚¬
          </div>
        </div>
      </div>
      <div class="flat-show-card">
        <div class="flex-align">
          <h6 class="no-mb">Share</h6>
          <div class="flex">
            <i class="fa-brands fa-facebook-square me-2"></i>
            <i class="fa-brands fa-twitter-square me-2"></i>
            <i class="fa-brands fa-pinterest-square me-2"></i>
          </div>
        </div>
      </div>
      <div class="flat-show-card text-center">
        <%= link_to "Edit", edit_flat_path(@flat), class: "ms-3 text-warning" %>
      </div>
      <div class="flat-show-card text-center">
        <%= link_to " Delete", flat_path(@flat), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "ms-3 text-danger" %>
      </div>
      <div class="flat-show-card text-center">
        <%= link_to "Back to flats", flats_path %>
      </div>
    </div>


  </div>

</div>
